<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/css/style.css" rel="stylesheet">
    
        <!-- Custom Styles -->
        <style>
            .hidden {
                display: none;
            }
            .panels {
                display: flex;
                flex-direction: row;
                height: calc(100vh - 60px); /* Adjust based on your navbar height */
            }
            #game-container {
                position: relative;
                flex-grow: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
            }
            #game {
                flex-grow: 1;
                width: 100%;
                position: relative;
            }
            #game img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }
            #primary-info {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                background-color: rgba(240, 240, 240, 0.9);
                padding: 10px;
                display: flex;
                justify-content: space-around;
                align-items: center;
            }
            #primary-info h4 {
                margin: 0;
                font-weight: bold;
                color: #2c3e50;
            }
            #dronesInfoContainer, #recommendations {
                width: 20%;
                padding: 10px;
                overflow-y: auto;
            }
        </style>

        <!-- JavaScript Libraries -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://unpkg.com/pako/dist/pako.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="/public/scripts/webgazer.js" async></script>
        
        <!-- Favicon -->
        <link rel="icon" href="/public/assets/favicon.webp" type="image/x-icon">
        <!-- Page Title -->
        <title>Security Control Simulation System</title>
    </head>
<script>
    var packetArray = JSON.parse('<%- packetArray %>');
    var conditionText = "<%= conditionText %>";
    var group = "<%= group %>";
    var censoredInfo = "<%= censorship %>";
    var censoredArrayNumber = parseInt('<%= censoredArrayNumber %>');
</script>

<body>
    <!-- Navigation Bar -->
    <nav class="custom-navbar">
        <!-- Left Side -->
        <div>
            <div class="navbar-logo">
                <a href="/">SCSS - <b>THE TRIAL MAY TAKE A FEW SECONDS TO BOTH START AND END, PLEASE WAIT.</b></a>
            </div>
        </div>
    </nav>

    <section class="panels">
        <!-- Left Panel -->
        <aside id="left-panel">
            <h4>Connection Information:</h4>
            <div id="secondary-info">
                <div id="info-checksum" class="info-item">Packet Size: Unavailable</div>
                <div id="info-time" class="info-item">Connection Time: Unavailable</div>
                <div id="info-ip" class="info-item">IP Address: Unavailable</div>
                <div id="info-country" class="info-item">Country: Unavailable</div>
            </div>
            <div id="info-classification" class="info-item">Classification: Unclassified</div>
            
            <h4>Classification:</h4>
            <div class="droneButtons">
                <button id="trusted" type="button">Trusted</button>
                <button id="suspect" type="button">Suspect</button>
                <button id="hostile" type="button">Hostile</button>
            </div>
        </aside>

        <!-- Middle Panel -->
        <div id="game-container">
            <div id="game">
                <img draggable="false" src="../public/assets/radarLines.png">
                <div id="primary-info">
                    <div id="info-portnumber" class="info-item">Port Number: Unavailable</div>
                    <div id="info-protocol" class="info-item">Protocol: Unavailable</div>
                    <div id="info-certificates" class="info-item">Certificates: Unavailable</div>
                </div>
            </div>
        </div>

        <!-- Right Panel -->
        <aside id="right-panel">
            <div id="recommendations">
                <h4 id="conditionText"></h4>
                <h4 id="condition"></h4>
                <h5 id="advice"></h5>
            </div>
            <button type="submit" id="accept">Accept Recommendation</button>
        </aside>
    </section>

    
    <!-- Additional Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/seedrandom/3.0.5/seedrandom.min.js"></script>
    <script type="module" src="../public/scripts/trial.js"></script>
</body>
</html>